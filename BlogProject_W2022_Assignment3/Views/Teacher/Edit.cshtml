@model BlogProject.Models.Teacher
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Teacher</h2>

<div id="containershow"></div>
<nav>
    <a class="navlink" href="/Teacher/List">Back to Teacher</a>
</nav>
<h2>New Teacher</h2>
<form method="POST" name="update_form"action="/Teacher/Update/@Model.TeacherId">
    <div class="inputrow">
        <label for="TeacherFname">First Name</label>
        <input id="teacherFN" type="text" value="@Model.TeacherFName" name="teacherfname" />
    </div>
    <div class="inputrow">
        <label for="TeacherLname">Last Name</label>
        <input id="teacherLN" type="text" value="@Model.TeacherLName" name="teacherlname" />
    </div>
    <div class="inputrow">
        <label for="EmployeeNumber">Employee Number</label>
        <input id="empNumber" type="text" value="@Model.EmployeeNumber" name="employeenumber" />
    </div>
    <div class="inputrow">
        <input type="submit" value="Update Teacher" />
    </div>
</form>

<script>
    var formHandle = document.forms.update_form;
    var teacherFname = document.getElementById("teacherFN");
    var teacherLname = document.getElementById("teacherLN");
    var employeeN = document.getElementById("empNumber");

    var FnameInput = formHandle.teacherfname;
    var LnameInput = formHandle.teacherlname;
    var eNumInput = formHandle.employeenumber;


    function validateInfo() {
        if (FnameInput.value === null || FnameInput.value === "") {
            teacherFname.style.background = "red";//SET BACKGROUND TO RED.
            FnameInput.focus();
            alert("First Name is empty");
            return false; //RETURN FALSE WILL PREVENT RUN ID SECTION DIRECTLY.
        } else {
            teacherFname.style.background = "none";
        }
        if (LnameInput.value === null || LnameInput.value === "") {
            teacherLname.style.background = "red";//SET BACKGROUND TO RED.
            LnameInput.focus();
            alert("Last neme is empty");
            return false; //RETURN FALSE WILL PREVENT RUN ID SECTION DIRECTLY.
        } else {
            teacherLname.style.background = "none";
        }
        if (eNumInput.value === null || eNumInput.value === "") {
            employeeN.style.background = "red";//SET BACKGROUND TO RED.
            eNumInput.focus();
            alert("Employee is empty");
            return false; //RETURN FALSE WILL PREVENT RUN ID SECTION DIRECTLY.
        } else {
            teacherLname.style.background = "none";
        }
      
    }
    formHandle.onsubmit = validateInfo;
</script>