@model IEnumerable<BlogProject.Models.Student>
@{
    ViewBag.Title = "List";
}


<div>There are @Model.Count() students in the system.</div>
<div><a href="/Student/New">Add new Student</a></div>
<div>
    <form action="/Student/List" method="GET">
        <input type="text" name="SearchKey" placeholder="Type a name here" />
        <input type="submit" value="Search" />
    </form>
</div>
<div>
    @{
        foreach (BlogProject.Models.Student Student in Model)
        {
            string Url = "/Student/Show/" + Student.StudentId;
            <div>
                <a href="@Url">@Student.StudentFName @Student.StudentLName</a>
            </div>
        }
    }

</div>

